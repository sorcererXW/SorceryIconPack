<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_request"
        android:shortcutDisabledMessage="@string/shortcuts_request_icon_disable_message"
        android:shortcutId="shortcut_request_icon"
        android:shortcutLongLabel="@string/shortcuts_request_icon_long_label"
        android:shortcutShortLabel="@string/shortcuts_request_icon_short_label">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.sorcerer.sorcery.iconpack.IconRequestActivity"
            android:targetPackage="com.sorcerer.sorcery.iconpack"/>
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>
</shortcuts>