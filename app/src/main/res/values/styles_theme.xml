    <style name="BlackTheme">
        <item name="android:colorPrimary">#000</item>
        <item name="android:colorPrimaryDark">#000</item>
        <item name="android:colorAccent">#fff</item>
        <item name="android:colorBackground">#000</item>
    </style>
