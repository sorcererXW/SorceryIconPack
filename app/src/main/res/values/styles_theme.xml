<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LightTheme">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">#6d4c41</item>
        <item name="android:colorControlActivated">#6d4c41</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorCard">#fff</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="DarkTheme">
        <item name="android:colorPrimary">#282828</item>
        <item name="android:colorPrimaryDark">#202020</item>
        <item name="android:statusBarColor">#202020</item>
        <item name="android:colorAccent">#009688</item>
